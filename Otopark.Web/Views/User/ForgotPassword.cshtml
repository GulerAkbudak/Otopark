@model Otopark.Data.Entities.User

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şifremi Unuttum - Otopark</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row" style="margin: 50px 0;">
            <div class="col-md-4 offset-md-4" style="padding: 50px 25px 50px 25px;
        box-shadow: 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        background-color: white">
                <div class="mb-3">
                    <label class="control-label" style="font-size:30px">Şifremi Unuttum</label>
                    <hr />
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label " })
                    <div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <p>
                            <a href="">@Html.ActionLink("Giriş Yap", "Login", "User")</a>
                        </p>
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-warning btn-lg btn-block float-end">Şifremi Unuttum</button>
                    </div>
                </div>
                <p class="text-danger">
                    @ViewBag.ErrorMessage
                </p>
            </div>
        </div>

    }



    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
