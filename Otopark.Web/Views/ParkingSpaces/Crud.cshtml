
@{
    ViewBag.Title = "Park Alanları";
}
<div class="row mb-2">
    <div class="col-md-6">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col-md-6">
        <button id="btnNew" class="btn btn-primary float-end"><i class="k-icon k-i-plus"></i> Yeni Park Alanı</button>
    </div>
</div>

<div id="parkSpaceModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="parkSpaceModalTitle" class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="txtParkingSpace" class="form-label">Park Yeri</label>
                            <input id="txtParkingSpace" type="text" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>


<div id="grid"></div>



@section scripts {
    <script src="~/Scripts/pages/parkingSpace.js"></script>
}