
@{
    ViewBag.Title = "Müşteriler";
}


<div class="row mb-2">
    <div class="col-md-6">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col-md-6">
        <button id="btnNew" class="btn btn-primary float-end"><i class="k-icon k-i-plus"></i> Yeni</button>
    </div>
</div>

<div id="grid"></div>

<div id="customerModal" class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="customerModalTitle" class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <div class="mb-2">
                            <label class="form-label">Adı Soyadı</label>
                            <input type="text" id="txtNameSurname" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Plaka</label>
                            <input type="text" id="txtPlaque" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Markası</label>
                            <input id="cmbBrandName" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Serisi</label>
                            <input id="cmbSerieName" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Renk</label>
                            <input type="text" id="txtColor" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Telefon</label>
                            <input type="text" id="txtTelephone" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Yıl</label>
                            <input type="number" id="txtYear" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label class="form-label">Açıklama</label>
                            <textarea id="txtComment" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/pages/customer.js"></script>
}

